using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;


public class updateFill : MonoBehaviour
{

    public Image myImage;
    public float speed = 2.0f;
    public float waitTime = 5.0f;
    public bool repeat;

    // Start is called before the first frame update
    IEnumerator Start()
    {
        while (repeat)
        {
            //fill in our circle to show firing
            yield return ChangeFill(0.0f, 1.0f, waitTime);

            // erase the fill, I couldn't fix this so I did it this way
            yield return ChangeFill(1.0f, 0.0f, waitTime);
            
        }
    }

    public IEnumerator ChangeFill(float start, float end, float time)
    {
        float i = 0.0f;
            float rate = (1.0f / time) * speed;
        while (i < 1.0f)
        {
            i += Time.deltaTime * rate;
            myImage.fillAmount = Mathf.Lerp(start, end, i);
            //IEnumerators need to return something, so we're going zeroes
            yield return null;
        }
    }
    // Update is called once per frame
    void Update()
    {
        
    }
}
